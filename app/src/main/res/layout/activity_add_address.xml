<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.addAddress.AddAddressActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back">
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewStyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/add_new_address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:id="@+id/etAddress"
            android:background="@drawable/bg_transparent_cornor_round"
            android:layout_margin="@dimen/dp_16"
            android:padding="@dimen/dp_10"
            android:minHeight="@dimen/dp_100"
            android:gravity="start"
            android:hint="@string/address"
            android:textSize="@dimen/sp_14"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/black"
            android:scrollbars="vertical"
            android:maxLength="200"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Spinner
            android:id="@+id/spinnerZone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="gone"
            android:layout_margin="@dimen/dp_16"
            android:background="@drawable/bg_transparent_cornor_round"
            app:layout_constraintTop_toBottomOf="@id/etAddress" />


        <EditText
            android:id="@+id/etBlockNumber"
            android:background="@drawable/bg_transparent_cornor_round"
            android:layout_margin="@dimen/dp_16"
            android:padding="@dimen/dp_10"
            android:gravity="start"
            android:maxLength="100"
            android:hint="@string/block_number"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black"
            android:scrollbars="vertical"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@id/spinnerZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rltvCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etBlockNumber">

            <Spinner
                android:id="@+id/spinnerCity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_alignEnd="@id/etCity"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:background="@drawable/bg_transparent_cornor_round" />

            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:background="@drawable/bg_transparent_cornor_round"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start"
                android:hint="@string/city"
                android:maxLength="100"
                android:padding="@dimen/dp_10"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />
        </RelativeLayout>


        <EditText
            android:id="@+id/etZipCode"
            android:background="@drawable/bg_transparent_cornor_round"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:padding="@dimen/dp_10"
            android:visibility="gone"
            android:gravity="start"
            android:maxLength="50"
            android:hint="@string/zip_code"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black"
            android:scrollbars="vertical"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@id/rltvCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:id="@+id/btnDone"
            style="@style/ButtonRedBackgroundStyle"
            android:text="@string/done"
            android:layout_margin="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>