<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.mywallet.activities.IncomeDetailsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/back_arrow1" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBackIncomeDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_2"
                android:fontFamily="@font/inter_extra_bold"
                android:text="@string/back"
                android:textFontWeight="400"
                android:textSize="@dimen/dp_16" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:fontFamily="@font/inter_regular"
            android:text="@string/income_detail"
            android:textColor="#585B68"
            android:textFontWeight="700"
            android:textSize="@dimen/dp_24"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_12"
                android:fontFamily="@font/inter_regular"
                android:text="Call With"
                android:textColor="#565656"
                android:textFontWeight="400"
                android:textSize="17dp">

            </androidx.appcompat.widget.AppCompatTextView>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/walletEarningImg"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginStart="@dimen/dp_15"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user"
                app:riv_corner_radius="@dimen/dp_60">

            </com.makeramen.roundedimageview.RoundedImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:fontFamily="@font/inter_regular"
                android:text="Annette Black"
                android:textColor="#2F80ED"
                android:textFontWeight="400"
                android:textSize="17dp">

            </androidx.appcompat.widget.AppCompatTextView>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/detailCardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/bg_payment_detail"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/referenceID"
                        android:textColor="#455154"
                        android:textFontWeight="600"
                        android:textSize="@dimen/dp_14"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="end"
                        android:text="6436345364775"
                        android:textColor="#455154"
                        android:textFontWeight="400"
                        android:textSize="@dimen/dp_12"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/date"
                        android:textColor="#455154"
                        android:textFontWeight="600"
                        android:textSize="@dimen/dp_14"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="end"
                        android:text="Feb 02 2022  2:00PM"
                        android:textColor="#455154"
                        android:textFontWeight="400"
                        android:textSize="@dimen/dp_12"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/platformfee"
                        android:textColor="#455154"
                        android:textFontWeight="600"
                        android:textSize="@dimen/dp_14"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="end"
                        android:text="$0.60"
                        android:textColor="#455154"
                        android:textFontWeight="400"
                        android:textSize="@dimen/dp_12"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/tips"
                        android:textColor="#455154"
                        android:textFontWeight="600"
                        android:textSize="@dimen/dp_14"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="end"
                        android:text="$20.00"
                        android:textColor="#455154"
                        android:textFontWeight="400"
                        android:textSize="@dimen/dp_12"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/call_duration"
                        android:textColor="#455154"
                        android:textFontWeight="600"
                        android:textSize="@dimen/dp_14"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="end"
                        android:text="45 min"
                        android:textColor="#455154"
                        android:textFontWeight="400"
                        android:textSize="@dimen/dp_12"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/call_charges"
                        android:textColor="#455154"
                        android:textFontWeight="600"
                        android:textSize="@dimen/dp_14"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="end"
                        android:text="$200"
                        android:textColor="#455154"
                        android:textFontWeight="400"
                        android:textSize="@dimen/dp_12"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/amount"
                        android:textColor="#455154"
                        android:textFontWeight="600"
                        android:textSize="@dimen/dp_14"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="end"
                        android:text="+$219.40"
                        android:textColor="#59B58D"
                        android:textFontWeight="400"
                        android:textSize="@dimen/dp_12"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</layout>