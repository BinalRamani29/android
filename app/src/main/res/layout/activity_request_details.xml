<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.furniture.data.model.CartResponseModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewStyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/request_details"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/dp_16"
                android:layout_height="match_parent">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvServicesMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvChooseAddress"
                    style="@style/TextViewStyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/choose_address"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rvServicesMain" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:background="@drawable/bg_transparent_cornor_round"
                    android:padding="@dimen/dp_10"
                    app:layout_constraintTop_toBottomOf="@+id/tvChooseAddress">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/ivMap"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:src="@drawable/ic_address_black"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:riv_corner_radius="@dimen/dp_8"
                        app:riv_mutate_background="true" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAddressType"
                        style="@style/TextViewStyleMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="My Home"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivMap"
                        app:layout_constraintTop_toTopOf="@id/ivMap" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvFullAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:drawableStart="@drawable/ic_circle_24"
                        android:drawablePadding="@dimen/dp_10"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="start"
                        android:text="Wadi masil inscriptions 17362,\nSaudi Arabia"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivMap"
                        app:layout_constraintTop_toBottomOf="@id/tvAddressType" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/linearPlaceOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/container_address">

                    <Button
                        android:id="@+id/btnProceedToCart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/proceed_to_cart"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                    <Button
                        android:id="@+id/btnAddAnother"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/bg_accent_border_strock"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/proceed_to_cart"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

<!--//-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/contraintOrderDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                   android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/container_address">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTimeFrame"
                        style="@style/TextViewStyleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/time_frame"
                        android:textSize="@dimen/sp_16"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@drawable/bg_transparent_cornor_round"
                        android:padding="@dimen/dp_10"
                        app:layout_constraintTop_toBottomOf="@+id/tvTimeFrame">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTimeTittle"
                            style="@style/TextViewStyleMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="@string/date_time"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:drawableStart="@drawable/ic_circle_24"
                            android:drawablePadding="@dimen/dp_10"
                            android:fontFamily="@font/poppins_regular"
                            android:text="13 May 2020, Thursday"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12"
                            app:layout_constraintTop_toBottomOf="@+id/tvTimeTittle" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTimeDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:drawableStart="@drawable/ic_circle_24"
                            android:drawablePadding="@dimen/dp_10"
                            android:fontFamily="@font/poppins_regular"
                            android:text="09:00 AM"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvDate" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvContactAgent"
                        style="@style/TextViewStyleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/contact_agent"
                        android:textSize="@dimen/sp_16"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/container_time" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/LaycontactAgent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@drawable/bg_transparent_cornor_round"
                        android:padding="@dimen/dp_10"
                        app:layout_constraintTop_toBottomOf="@+id/tvContactAgent">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/ivAgentPic"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            setImageFromUrl="@{data.vendor_availability.vendor.full_image}"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:background="@color/grey_text"
                            android:scaleType="fitXY"
                            android:layout_marginBottom="@dimen/dp_10"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:riv_border_color="@color/white"
                            app:riv_border_width="@dimen/dp_2"
                            app:riv_mutate_background="true"
                            app:riv_oval="true" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvAgentName"
                            style="@style/TextViewStyleMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="Charles Simon"
                            app:layout_constraintStart_toEndOf="@+id/ivAgentPic"
                            app:layout_constraintTop_toTopOf="@+id/ivAgentPic" />


                        <RatingBar
                            android:id="@+id/venderRating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:isIndicator="false"
                            android:numStars="5"
                            android:stepSize="0.1"
                            android:visibility="gone"
                            android:progressTint="@color/colorAccent"
                            app:layout_constraintStart_toEndOf="@id/tvAgentName"
                            app:layout_constraintTop_toTopOf="@id/tvAgentName" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtStatus"
                            style="@style/TextViewStyleHint"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:text="@string/status"
                            android:textSize="@dimen/sp_12"
                            app:layout_constraintStart_toEndOf="@+id/ivAgentPic"
                            app:layout_constraintTop_toBottomOf="@+id/tvAgentName" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvStatus"
                            style="@style/TextViewStyleHint"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:textColor="@color/green"
                            android:textSize="@dimen/sp_12"
                            app:layout_constraintStart_toEndOf="@+id/txtStatus"
                            app:layout_constraintTop_toBottomOf="@+id/tvAgentName" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/ivCall"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:src="@drawable/ic_seven"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>



                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnRating"
                        style="@style/ButtonRedBackgroundStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:text="@string/add_rating"
                        android:textAllCaps="true"
                        app:layout_constraintTop_toBottomOf="@id/LaycontactAgent" />


                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnTrack"
                    style="@style/ButtonRedBackgroundStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Track"
                    android:layout_margin="@dimen/dp_16"
                    android:textAllCaps="true"
                    app:layout_constraintTop_toBottomOf="@+id/contraintOrderDetail" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvOrderStatus"
                    style="@style/TextViewStyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Order Status:"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintStart_toStartOf="@+id/btnTrack"
                    app:layout_constraintTop_toBottomOf="@+id/btnTrack" />

                <TextView
                    android:id="@+id/tvRejected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rejected"
                    style="@style/TextViewStyleMedium"
                    android:textColor="@color/colorAccent"
                    android:layout_marginStart="@dimen/dp_10"
                    app:layout_constraintBottom_toBottomOf="@+id/tvOrderStatus"
                    app:layout_constraintStart_toEndOf="@+id/tvOrderStatus"
                    app:layout_constraintTop_toTopOf="@+id/tvOrderStatus" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>